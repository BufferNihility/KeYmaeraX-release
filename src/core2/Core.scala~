
object Core {

/**
 * Helper
 */

  sealed abstract class CList[A]

  case class Cons[A](head : A, tail : CList[A]) extends CList
  case class Nil extends CList

/**
 * Types
 */

  sealed abstract class Sort

  trait Quantifiable

  object Bool    extends Sort with Quantifiable
  object Real    extends Sort with Quantifiable
  object Unit    extends Sort with Quantifiable
  object Game    extends Sort
  object Program extends Sort
  object User    extends Sort
  object Enum    extends Sort


}
