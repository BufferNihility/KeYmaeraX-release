Variables.
  T s.
  T t.
  T x.
  T v. /* TODO-nrf this needs to be a V */
  T f(T).
  T g(T).
  P a.
  P b.
  CP c.
  F p.
  F p(T).
  F q.
  F H.
  F H(T).
End.

Axiom "[:=] assignment".
  [v:=t;]p(v) <-> p(t)
End.

Axiom "<:=> assignment".
  <v:=t;>p(v) <-> p(t)
End.

Axiom "[:=] assignment equal".
  [v:=t;]p(v) <-> \forall v . (v=t -> p(v))
End.

Axiom "[':=] derivative assignment equal".
  [v':=t;]p(v) <-> \forall v . (v'=t -> p(v))
End.

Axiom "[:*] assignment".
  [v:=*;]p(v) <-> \forall v. p(v)
End.

Axiom "<:*> assignment".
  <v:=*;>p(v) <-> \exists v. p(v)
End.

Axiom "[?] test".
  [?H;]p <-> (H -> p).
End.

Axiom "<?> test".
  <?H;>p <-> (H & p).
End.

Axiom "[++] choice".
  [a ++ b]p <-> ([a;]p & [b;]p).
End.

/*
Axiom "<++> choice".
