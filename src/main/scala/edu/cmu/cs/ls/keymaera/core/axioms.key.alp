Axiom "[;] compose".
  [ a; b; ]p <-> [a;][b;]p.
End.

Axiom "<;> compose".
  < a; b; >p <-> <a;><b;>p.
End.

Axiom "[*] unwind".
  [a*]p <-> (p & [a;][a*] p).
End.

Axiom "<*> unwind".
  <a*>p <-> (p | <a;><a*> p).
End.

Axiom "K modal modus ponens".
  [a;](p->q) -> (([a;]p) -> ([a;]q))
End.

Axiom "I induction".
  (p & [a*](p -> [a;] p)) -> [a*]p
End.

Axiom "B- converse Barcan".
  ([a;] \forall x. p(x)) -> \forall x. [a;] p(x)
End.

Axiom "Quantifier Instantiation".
  \forall x. p(x) -> p(t)
End.

